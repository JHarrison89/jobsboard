
<div class="container d-flex flex-row-reverse">
    <div class="col-md-8 mt-4">
      <h2 class="mb-4">My Jobs</h2>

        <%= link_to "All jobs #{@total_jobs}", jobs_path, class: "btn-off" %>
        <%= link_to "My jobs #{@total_saved}", jobs_saved_path, class: "btn-on" %>

      <% @jobs.each do |job| %>
        <div class="card-product mt-4">
          <div class="card-product-infos m-2">
            <h2><%= job.title %></h2>
            <p><%= job.short_desc %></p>
            <p><%= job.employer %></p>
            <%= link_to remove_path(job), method: 'patch' do %><i class="fa fa-star gold"></i><% end %>
          </div>
        </div>
      <% end %>
    </div>

</div>
