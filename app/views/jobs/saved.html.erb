
<div class="container">
  <div class="row">
    <div class="m-2">
      <h2>Saved Jobs</h2>
      <% @jobs.each do |job| %>
      <div class="card-product">
        <div class="card-product-infos">
          <h2><%= job.title %></h2>
          <p><%= job.short_desc %></p>
          <p><%= job.employer %></p>
          <%= link_to remove_path(job), method: 'patch' do %><i class="fa fa-star gold"></i><% end %>

        </div>
      </div>

      <% end %>
    </div>
  </div>
</div>
