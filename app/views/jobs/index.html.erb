
<div class="container">
  <div class="row">
    <div class="w-50 m-2">
      <h2>All Jobs</h2>
      <% @jobs.each do |job| %>
      <div class="card-product">
        <div class="card-product-infos">
          <h2><%= job.title %></h2>
          <p><%= job.short_desc %></p>
           <p><%= job.employer %></p>
        </div>
      </div>

      <% end %>
    </div>

    <div class="w-50 m-2">
      <h2>My Jobs</h2>
      <% @jobs.each do |job| %>
      <div class="card-product">
        <div class="card-product-infos">
          <h2><%= job.title %></h2>
          <p><%= job.short_desc %></p>
           <p><%= job.employer %></p>
        </div>
      </div>

      <% end %>
    </div>
  </div>
</div>
