
<div class="container">
  <div class="row">
    <div class=" m-2">
      <h2>All Jobs</h2>
      <% @jobs.each do |job| %>
      <div class="card-product">
        <div class="card-product-infos">
          <h2><%= job.title %></h2>
          <p><%= job.short_desc %></p>
          <p><%= job.employer %></p>
          <%= link_to save_path(job) do %><i class="far fa-star gold"></i><% end %>

        </div>
      </div>

      <% end %>
    </div>
  </div>
</div>
