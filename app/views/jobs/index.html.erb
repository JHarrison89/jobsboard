
<div class="container d-flex flex-row-reverse">
    <div class="col-md-8">
      <h2>All Jobs</h2>

        <%= link_to "All jobs", jobs_path, class: "btn btn-primary" %>
        <%= link_to "My jobs", jobs_saved_path, class: "btn btn-primary" %>

      <% @jobs.each do |job| %>
        <div class="card-product mt-4">
          <div class="card-product-infos">
            <h2><%= job.title %></h2>
            <p><%= job.short_desc %></p>
            <p><%= job.employer %></p>
            <%= link_to save_path(job) do %><i class="far fa-star gold"></i><% end %>
          </div>
        </div>
      <% end %>
    </div>

</div>
